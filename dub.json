{
    "name": "gfm",
    "description": "D gamedev toolkit.",
    "homepage": "http://github.com/d-gamedev-team/gfm/",
    "copyright": "none",
    "license": "public domain",

    "authors": [
        "ponce",
        "Gerbrand Kamphuis / vuaru: many fixes",
        "Kyle Hunter / Kelet: ENet wrapper",
        "Francesco Cattoglio: OpenGL wrapper improvements",
        "John D. Cook: SimpleRNG author",
        "Sam Hocevar: many bits of code",
        "Daniel Cousens / RommelVR: GL fix"
    ],

    "targetType": "none",

    "dependencies": {
        "gfm:core": "*",
        "gfm:assimp": "*",
        "gfm:enet": "*",
        "gfm:freeimage": "*",
        "gfm:image": "*",
        "gfm:math": "*",
        "gfm:net": "*",
        "gfm:opengl": "*",
        "gfm:sdl2": "*"
    },

    "subPackages": [
        {
            "name": "core",
            "sourcePaths": [ "core/gfm/core" ],
            "importPaths": [ "core" ],
            "dependencies": {
                "logger": "==0.1.0"
            }
        },
        {
            "name": "math",
            "sourcePaths": [ "math/gfm/math" ],
            "importPaths": [ "math" ]
        },
        {
            "name": "image",

            "sourcePaths": [ "image/gfm/image" ],
            "importPaths": [ "image" ],
            "dependencies": {
                "gfm:core": "*",
                "gfm:math": "*",
                "ae-graphics": "==0.0.2"
            }
        },
        {
            "name": "net",
            "sourcePaths": [ "net/gfm/net" ],
            "importPaths": [ "net" ]
        },
        {
            "name": "enet",
            "sourcePaths": [ "enet/gfm/enet" ],
            "importPaths": [ "enet" ],
             "dependencies": {
                "derelict-enet": "==1.3.10",
                "logger": "==0.1.0"
            }
        },
        {
            "name": "assimp",
            "sourcePaths": [ "assimp/gfm/assimp" ],
            "importPaths": [ "assimp" ],
            "dependencies": {
                "derelict-assimp3": "==1.0.0",
                "gfm:core": "*",
                "logger": "==0.1.0"
            }
        },
        {
            "name": "opengl",
            "sourcePaths": [ "opengl/gfm/opengl" ],
            "importPaths": [ "opengl" ],
            "dependencies": {
                "derelict-gl3": "==1.0.4",
                "logger": "==0.1.0",
                "gfm:core": "*",
                "gfm:math": "*"
            }
        },
        {
            "name": "sdl2",
            "sourcePaths": [ "sdl2/gfm/sdl2" ],
            "importPaths": [ "sdl2" ],
            "dependencies": {
                "derelict-sdl2": "==1.2.4",
                "logger": "==0.1.0",
                "gfm:core": "*"
            }
        },
        {
            "name": "freeimage",
            "sourcePaths": [ "freeimage/gfm/freeimage" ],
            "importPaths": [ "freeimage" ],
            "dependencies": {
                "derelict-fi": "==1.0.0",
                "gfm:core": "*",
                "logger": "==0.1.0"
            }
        }
    ]
}
