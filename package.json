{
    "name": "gfm",
    "description": "Kitchen-sink utility library for multimedia programming",
    "homepage": "http://github.com/p0nce/gfm/",
    "copyright": "Copyright Â© 2011-2013, Games From Mars, ",
    "license": "Public Domain except some parts",

    "targetPath": "lib",
    
    "authors": [
        "ponce",
        "Ian Kaplan",
        "John D. Cook",
        "Robert Penner"
    ],

    "dependencies": {
        "gfm:common": "~master",
        "gfm:assimp": "~master",
        "gfm:examples": "~master",
        "gfm:freeimage": "~master",
        "gfm:image": "~master",
        "gfm:math": "~master",
        "gfm:net": "~master",
        "gfm:opengl": "~master",
        "gfm:sdl2": "~master"
    }

    "subPackages" : [
        {
            "name": "common",
            "targetPath": "lib",
            "sourcePaths": ["import/gfm/common"],
            "importPaths": ["import"]
        },
        {
            "name": "math",
            "targetPath": "lib",
            "sourcePaths": ["import/gfm/math"],
            "importPaths": ["import"]            
        },
        {
            "name": "image",
            "targetPath": "lib",
            "sourcePaths": ["import/gfm/image"],
            "importPaths": ["import"]
            "dependencies": {
                "gfm:common": "~master",
                "gfm:math": "~master"
            },
        },
        {
            "name": "net",
            "targetPath": "lib",
            "sourcePaths": ["import/gfm/net"],
            "importPaths": ["import"]            
        },
        {
            "name": "assimp",
            "targetPath": "lib",
            "sourcePaths": ["import/gfm/assimp"],
            "importPaths": ["import"]
            "dependencies": {
                "derelict:assimp": "~master",
                "gfm:common": "~master"
            },
        },
        {
            "name": "opengl",
            "targetPath": "lib",
            "sourcePaths": ["import/gfm/opengl"],
            "importPaths": ["import"]
            "dependencies": {
                "derelict:opengl3": "~master",
                "gfm:common": "~master"
            },
        },
        {
            "name": "sdl2",
            "targetPath": "lib",
            "sourcePaths": ["import/gfm/sdl2"],
            "importPaths": ["import"]
            "dependencies": {
                "derelict:sdl2": "~master",
                "gfm:common": "~master"
            },
        },
        {
            "name": "freeimage",
            "targetPath": "lib",
            "sourcePaths": ["import/gfm/freeimage"],
            "importPaths": ["import"]
            "dependencies": {
                "derelict:freeimage": "~master",
                "gfm:common": "~master"
            },
        },
       
        {
            "name": "examples",
            "targetPath": "examples-build",
            "sourcePaths": ["import/gfm/examples"],
            "importPaths": ["import"]
            "dependencies": {
                "gfm:common": "~master",
                "gfm:math": "~master",
                "gfm:opengl": "~master",
                "gfm:net": "~master",
                "gfm:sdl2": "~master",
            },
        },
    ]
}
